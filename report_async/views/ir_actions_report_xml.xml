<?xml version="1.0"?>
<odoo>

  <record model="ir.ui.view" id="act_report_xml_view">
    <field name="name">ir.actions.report.xml.async</field>
    <field name="model">ir.actions.report.xml</field>
    <field name="inherit_id" ref="base.act_report_xml_view" />
    <field name="arch" type="xml">
      <xpath expr="//page[@name='advanced']/group[1]" position="inside" >
          <field name="async_report"/>
          <field name="async_no_records" attrs="{'required': [('async_report', '=', True)]}"/>
      </xpath>
    </field>
  </record>

</odoo>
